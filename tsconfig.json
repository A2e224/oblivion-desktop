{
    "compilerOptions": {
        "incremental": true,
        "target": "es2022",
        "module": "commonjs",
        "lib": ["dom", "es2022"],
        "jsx": "react-jsx",
        "strict": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "rootDir": "src",
        "outDir": "release/app/dist"
    },
    "include": ["src/**/*"],
    "exclude": ["test", "release/build", "release/app/dist"]
}
